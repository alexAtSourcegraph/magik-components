<gui>

  <toolbar name="form">
    <action name="clear" />
    <action name="set_defaults" source="field_lister" />
    <action name="clear_selected_proposed_values" source="field_lister" />
  </toolbar>

  <toolbar name="transaction">
    <action name="insert" />
    <action name="update" />
  </toolbar>

  <toolbar name="lock">
    <action name="lock_to_collection" />
    <action name="lock_to_record" />
  </toolbar>

  <dock name="top">
    <toolbar name="lock" />
    <toolbar name="transaction" />
    <toolbar name="form" />
  </dock>

  <work_area>
    <paned_window side_by_side="no" dynamic="yes">
      <self stretch="0"/>
      <plugin plugin_name="field_lister" stretch="80"/>
      <plugin plugin_name="task_properties" stretch="20"/>
    </paned_window>
  </work_area>

</gui>
